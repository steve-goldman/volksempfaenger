<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.x4a42.volksempfaenger"
    android:versionCode="8"
    android:versionName="dev" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".VolksempfaengerApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Volksempfaenger" >
        <activity android:name=".ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddSubscriptionActivity"
            android:theme="@style/Theme.Dialog"
            android:windowSoftInputMode="stateVisible"
            tools:ignore="ExportedActivity" >

            <!-- Intent filters taken from http://stackoverflow.com/a/5502710/731539 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.xml" />
                <data android:pathPattern=".*\\.rss" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:host="feeds.feedburner.com" />
                <data android:host="feedproxy.google.com" />
                <data android:host="feeds2.feedburner.com" />
                <data android:host="feedsproxy.google.com" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:mimeType="text/xml" />
                <data android:mimeType="application/rss+xml" />
                <data android:mimeType="application/atom+xml" />
                <data android:mimeType="application/xml" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DebugActivity" />
        <activity
            android:name=".ui.DeleteSubscriptionActivity"
            android:label="@string/title_delete_subscription"
            android:theme="@style/Theme.Dialog" />
        <activity
            android:name=".ui.ExternalStorageMissingActivity"
            android:theme="@style/Theme.CriticalError" />
        <activity
            android:name=".ui.ImportFileActivity"
            android:theme="@style/Theme.Dialog" />
        <activity
            android:name=".ui.LicenseActivity"
            android:theme="@style/Theme.Settings" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.Settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ViewSubscriptionActivity"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
>
        <activity
            android:name=".ui.ViewEpisodeActivity"
            android:parentActivityName=".ui.ViewSubscriptionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ViewSubscriptionActivity" />
        </activity>
>
        <activity
            android:name=".ui.PlaylistActivity"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
>
        <service android:name=".service.CleanCacheService" />
        <service android:name=".service.DownloadService" />
        <service android:name=".service.UpdateService" />
        <service android:name=".service.PlaybackService" />

        <receiver
            android:name=".receiver.BootCompletedReceiver"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.DownloadCompleteReceiver"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.DownloadNotificationClickedReceiver"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.MediaButtonEventReceiver" />
        <receiver
            android:name=".receiver.BackgroundErrorReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="net.x4a42.volksempfaenger.BACKGROUND_ERROR" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".data.VolksempfaengerContentProvider"
            android:authorities="net.x4a42.volksempfaenger"
            android:exported="false" />
    </application>

</manifest>

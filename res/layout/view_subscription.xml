<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="NestedWeights" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <net.x4a42.volksempfaenger.ui.PodcastLogoView
            android:id="@+id/podcast_logo"
            style="@style/PodcastLogo.Large" />

        <TextView
            android:id="@+id/podcast_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DDD"
            android:hint="@string/empty_description"
            android:maxLines="9"
            android:padding="@dimen/padding_small"
            android:textColorHint="#666" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBB" />

    <ListView
        android:id="@+id/episode_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <include layout="@layout/nowplaying_fragment" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="wrap_content"
	android:layout_width="match_parent">
	<ImageView android:id="@+id/podcast_icon"
		android:layout_height="64dp" android:layout_width="64dp" android:src="#ccc" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_weight="1"
		android:paddingLeft="6dp" android:paddingBottom="2dp"
		android:paddingTop="2dp" android:layout_gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/podcast_title"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:ellipsize="marquee" android:scrollHorizontally="true"
			android:singleLine="true" />
		<TextView android:id="@+id/podcast_description"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:ellipsize="marquee" android:scrollHorizontally="true"
			android:singleLine="true" />
	</LinearLayout>
	<TextView android:layout_width="wrap_content" android:text="4"
		android:textSize="24sp" android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" android:padding="12dp"
		android:layout_weight="0" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_height="wrap_content"
	android:layout_width="match_parent">
	<ImageView android:id="@+id/podcast_icon"
		android:layout_height="64sp" android:layout_width="64sp" android:src="#ccc" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_weight="1"
		android:paddingLeft="6sp" android:paddingBottom="2sp"
		android:paddingTop="2sp" android:layout_gravity="center_vertical"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/podcast_title" android:textSize="18sp"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:text="Podcast Title" />
		<TextView android:id="@+id/podcast_description"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:text="Podcast Description. Long text. Very long text."
			android:ellipsize="marquee" android:scrollHorizontally="true"
			android:singleLine="true" />
	</LinearLayout>
	<TextView android:layout_width="wrap_content" android:text="4"
		android:textSize="24sp" android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" android:padding="12sp"
		android:layout_weight="0" />
</LinearLayout>

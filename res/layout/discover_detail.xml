<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium" >

    <ImageView
        android:id="@+id/podcast_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_logo" />

    <TextView
        android:id="@+id/podcast_title"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_toRightOf="@+id/podcast_logo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/podcast_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/podcast_logo"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="Description" />

    <Button
        android:id="@+id/button_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/podcast_description"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="@string/menu_website" />

</RelativeLayout>